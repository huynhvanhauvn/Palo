<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:id="@+id/islide_line"
    android:layout_margin="8dp"
    android:elevation="20dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/islide_img_avatar"
        android:layout_width="100dp"
        android:layout_height="120dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:riv_corner_radius="8dp"
        android:scaleType="centerCrop"
        android:elevation="20dp"/>
    <TextView
        android:id="@+id/islide_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toRightOf="@+id/islide_img_avatar"
        app:layout_constraintTop_toTopOf="@+id/islide_img_avatar"
        app:layout_constraintBottom_toTopOf="@+id/islide_txt_birthday"

        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/islide_txt_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/islide_txt_name"
        app:layout_constraintLeft_toRightOf="@+id/islide_img_avatar"
        app:layout_constraintBottom_toTopOf="@+id/islide_txt_nation"

        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/islide_txt_nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/islide_txt_birthday"
        app:layout_constraintLeft_toRightOf="@+id/islide_img_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/islide_img_avatar"

        android:layout_marginLeft="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>